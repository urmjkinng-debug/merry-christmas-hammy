<body>  <h1>üéÑ Merry Christmas, Hammy! üéÑ</h1>
  <p>Click the glowing ornaments on the tree to collect Christmas joy ‚ú®
     Turn on the music and enjoy the snow.</p><button onclick="startMusic()">üé∂ Start Christmas Music</button> <button onclick="toggleMusic()">‚è∏Ô∏è Pause / Resume</button>

  <div class="tree" id="tree">
    <div class="triangle"></div>
    <div class="triangle"></div>
    <div class="triangle"></div>
    <div class="trunk"></div>
  </div>  <div class="score">üéÅ Gifts Collected: <span id="score">0</span></div>  <footer>
    Made with ‚ù§Ô∏è just for you
  </footer>  <!-- Christmas Music -->  <audio id="music" loop>
    <source src="https://cdn.pixabay.com/audio/2022/10/30/audio_5b0c62c1e5.mp3" type="audio/mpeg">
  </audio>  <script>
    const tree = document.getElementById('tree');
    const scoreEl = document.getElementById('score');
    const music = document.getElementById('music');
    let score = 0;

    function createOrnament() {
      const o = document.createElement('div');
      o.className = 'ornament';
      o.style.background = `hsl(${Math.random()*360}, 80%, 60%)`;
      o.style.left = Math.random()*200 + 30 + 'px';
      o.style.top = Math.random()*180 + 20 + 'px';

      o.onclick = () => {
        score++;
        scoreEl.textContent = score;
        o.remove();
        createOrnament();
      };
      tree.appendChild(o);
    }

    for (let i = 0; i < 6; i++) createOrnament();

    function startMusic() {
      music.volume = 0.6;
      music.play();
    }

    function toggleMusic() {
      if (music.paused) music.play();
      else music.pause();
    }

    // Snow effect
    function createSnow() {
      const snow = document.createElement('div');
      snow.className = 'snowflake';
      snow.textContent = '‚ùÑ';
      snow.style.left = Math.random() * window.innerWidth + 'px';
      snow.style.fontSize = Math.random() * 10 + 10 + 'px';
      snow.style.animationDuration = Math.random() * 3 + 3 + 's';
      document.body.appendChild(snow);
      setTimeout(() => snow.remove(), 6000);
    }

    setInterval(createSnow, 300);
  </script></body>
